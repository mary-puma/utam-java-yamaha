{
  "root": true,
  "selector": {
    "css": ".desktop.container.forceStyle.oneOne.navexDesktopLayoutContainer.lafAppLayoutHost.forceAccess.tablet"
  },

  "beforeLoad": [
    {
      "element": "root",
      "apply": "waitFor",
      "args": [
        {
          "type": "function",
          "predicate": [
            {
              "element": "root",
              "apply": "containsElement",
              "args": [
                {
                  "value": { "css": ".listViewContent table tbody tr>td" },
                  "type": "locator"
                }
              ]
            }
          ]
        }
      ]
    }
  ],

    "elements": [
      {
        "name": "rowHeader",
        "type": ["actionable", "clickable"],
        "selector": {
          "css": "tbody tr:nth-of-type(%d) > th a",
          "args": [
            {
              "name": "rowIndex",
              "type": "number"
            }
          ]
        },
        "public": true
      },

      {
        "name": "row",
        "selector": {
          "css": "tbody tr:nth-of-type(%d)",
          "args": [
            {
              "name": "rowIndex",
              "type": "number"
            }
          ]
        },
        "elements": [
          {
            "name": "rowCells",
            "selector": {
              "css": "td",
              "returnAll": true
            },
            "public": true
          }
        ]
      },


      {
        "name": "nameTitle",
        "public": true,
        "selector": {
          "css": "th a [title='Name']"
        }
      },
      {
        "name": "tableRows",
        "type": "actionable",
        "selector": {
          "css": "tbody tr",
          "returnAll": true
        },
        "public": true
      }
    ],
  "methods": [

    {
      "name": "waitForRecords",
      "compose": [
        {

          "apply": "waitFor",
          "args": [
            {
              "type": "function",
              "predicate": [
                {
                  "element": "nameTitle",
                  "apply": "getText",
                  "matcher": {
                    "type": "stringEquals",
                    "args": [
                      {
                        "value": "Name"
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "name" : "getRowsCount",
      "compose" : [
        {
          "element" : "tableRows",
          "apply" : "size"
        }
      ]
    }
  ]
}
